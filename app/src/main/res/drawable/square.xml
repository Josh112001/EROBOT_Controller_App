<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set the size of the square -->
    <size
        android:width="100dp"
        android:height="100dp" />

    <!-- Set a color for the square (background) -->
    <solid android:color="#FF0000" /> <!-- Example: Red color -->

    <!-- Optional: Border (stroke) around the square -->
    <stroke
        android:width="2dp"
        android:color="#000000" /> <!-- Example: Black border -->

    <!-- Optional: Add rounded corners (remove this for sharp edges) -->
    <corners android:radius="4dp" />

</shape>
